{
  "name": "restful-home",
  "version": "1.0.0",
  "description": "Node js backend API to control the home devices through a raspberry pi",
  "main": "src/app.js",
  "scripts": {
    "build": "tsc --pretty",
    "start": "npm run build && node dist/server.js",
    "dev": "npm run build && nodemon dist/server.js",
    "test": "nyc mocha --recursive --require ts-node/register test/**/*.ts",
    "sonar": "node_modules/gulp/bin/gulp.js",
    "prepare": "node prepare.js"
  },
  "author": "FlorianArnould",
  "license": "LGPL-3.0",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^6.0.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mkdirp": "^0.5.1",
    "rfxcom": "^2.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/better-sqlite3": "^5.4.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^7.0.2",
    "@types/supertest": "^2.0.8",
    "gulp": "^4.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "sonarqube-scanner": "^2.6.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.9.0",
    "typemoq": "^2.1.0",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FlorianArnould/restful-home"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcovonly",
      "text-summary"
    ],
    "all": true
  }
}
